    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build Site",
            "type": "python",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "module": "bft.html.builder",
            "justMyCode": true
        },
        {
            "name": "Run Tests",
            "type": "python",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "module": "pytest",
            "args": [
                "bft"
            ],
            "justMyCode": true
        }
    ]
}